{
    "name": "trackphp/core",
    "type": "library",
    "description": "The core library for trackPHP, a lightweight, convention-driven PHP framework.",
    "keywords": ["php", "framework", "lightweight", "trackPHP"],
    "license": "MIT",
    "autoload": {
      "psr-4": { "TrackPHP\\": "src/" },
      "files": ["src/Support/helpers.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "TrackPHP\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.3",
        "friendsofphp/php-cs-fixer": "^3.75"
    },
    "scripts": {
      "lint": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff",
      "fix":  "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix"
    }
}
